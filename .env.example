BLUE_IMAGE=yimikaade/wonderful:devops-stage-two
GREEN_IMAGE=yimikaade/wonderful:devops-stage-two


ACTIVE_POOL=blue


# RELEASE IDENTIFIERS (Required)

# These IDs are returned in the X-Release-Id header
# Format: any string (e.g., version number, git hash)
RELEASE_ID_BLUE=blue-v1.0.0
RELEASE_ID_GREEN=green-v1.0.0


# PORT CONFIGURATION (Optional)

# Internal container port (where the app listens inside the container)
# Default: 3000
PORT=3000

# Public Nginx port (external access to load balancer)
# Default: 8080
NGINX_PORT=8080

# Direct access ports for chaos testing
# Blue service port (for POST /chaos/* endpoints)
# Default: 8081
BLUE_PORT=8081

# Green service port (for POST /chaos/* endpoints)
# Default: 8082
GREEN_PORT=8082
